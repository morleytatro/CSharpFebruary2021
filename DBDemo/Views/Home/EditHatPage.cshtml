<h1>Edit Hat</h1>

@model Hat
<form action="/update-hat" method="post">
  @* hidden input to tell the backend which hat we're updating *@
  <input type="hidden" name="HatId" value="@Model.HatId">
  <div class="form-group">
    <label asp-for="Color"></label>
    <input asp-for="Color" class="form-control">
    <span asp-validation-for="Color" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Brand"></label>
    <input asp-for="Brand" class="form-control">
    <span asp-validation-for="Brand" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Adjustable"></label>
    <input asp-for="Adjustable" class="form-control">
    <span asp-validation-for="Adjustable" class="text-danger"></span>
  </div>
  <button class="btn btn-primary">Create</button>
</form>